{
  "manifest_version": 3,
  "name": "Captura de Áudio da Guia",
  "version": "1.0",
  "description": "Extensão para capturar áudio da guia atual e salvar como .wav",
  "permissions": [
    "tabCapture",
    "downloads",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
